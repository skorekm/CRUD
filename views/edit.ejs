<%include ./partials/header.ejs %>

<div class="ui main text container segment">
	<h1>Edit "<%=post.title%>"</h1>
	<form class="ui form" action="/posts/<%=post._id%>?_method=PUT" method="POST">
	<div class="field">
		<label>Name</label>
		<input type="text" name="blog[title]" value="<%=post.title%>">	
	</div>
	<div class="field">
		<label>Image</label>
		<input type="text" name="blog[image]" value="<%=post.image%>">	
	</div>
	<div class="field">
		<label>Blog Content</label>
		<textarea name="blog[description]"><%=post.description%></textarea>
	</div>
		<button class="positive ui button">Submit</button>
	</form>
</div>

<%include ./partials/footer.ejs %>